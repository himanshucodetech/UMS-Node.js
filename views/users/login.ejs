<div style="border: 4px solid #090505fb; padding: 10px; margin:140px;text-align: center; background-color: rgb(92, 162, 228);">
    <% include("../layouts/header.ejs")%>

    <h1> Login</h1>
    
    <%
    if(typeof message !== 'undefined'){
        %>
            <h4><%= message %> </h4>
        <%
    }
    %>
    
    <form action="/login" method="post">
        <input type="email" name="email" placeholder="Enter your email" required>
        <br><br>
        <input type="password" name="password" placeholder="Enter your password" required>
        <br><br>
        <input type="submit" value="Login" style="background-color: #007bff; color: #fff; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer;">
        <br><br>
    </form>
    <a href="/forget"> Forget Password</a>
    
    <% include("../layouts/footer.ejs")%></div>



