<div style="border: 4px solid #090505fb; padding: 10px; margin:110px;text-align: center; background-color: rgb(172, 216, 60);">
    <% include('../layouts/header.ejs')%>
    <h1> User registration form</h1>
    <form action="" method="post" enctype="multipart/form-data">
        <input type="text" name="name" placeholder="enter name" required>
        <br><br>
        <input type="email" name="email" placeholder="enter your email" required>
        <br><br>
        <input type="text" name="mno" placeholder="enter mobile" required>
        <br><br>
        <input type="file" name="image"  required style="margin-left: 80px;">
        <br><br>
        <input type="password" name="password" placeholder="Enter Password" required>
        <br><br>
        <input type="submit"  value="Register"  required  style="background-color: #007bff; color: #fff; border: none; padding: 10px 20px; border-radius: 5px; cursor: pointer;">
        
        <br><br>
    </form>
    <% if(typeof message !== 'undefined') { %>
      <p style="color: green"><%= message %></p>
    <% } %>
    <% include('../layouts/footer.ejs')%>
  </div>
  